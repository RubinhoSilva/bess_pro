# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=8010

# Database
MONGODB_URI=mongodb://admin:your-secure-password@mongodb:27017/bess-pro-prod?authSource=admin
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your-secure-password

# Redis
REDIS_URL=redis://:your-redis-password@redis:6379
REDIS_PASSWORD=your-redis-password

# JWT Secrets (MUST change these in production!)
JWT_SECRET=your-super-secure-jwt-secret-change-this
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-change-this

# CORS
CORS_ORIGIN=https://your-domain.com

# Email Configuration (using Mailpit for testing)
EMAIL_PROVIDER=nodemailer
EMAIL_HOST=mailpit
EMAIL_PORT=1025
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@your-domain.com

# File Storage
STORAGE_TYPE=local

# Optional: External APIs
# GOOGLE_SOLAR_API_KEY=your-google-api-key
# PVGIS_API_URL=https://re.jrc.ec.europa.eu/api/v5_2/

# Security
# SESSION_SECRET=your-session-secret
# ENCRYPTION_KEY=your-encryption-key