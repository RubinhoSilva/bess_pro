{
  "name": "@bess-pro/backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register\" src/index.ts",
    "dev:docker": "nodemon --exec \"ts-node -r tsconfig-paths/register --project tsconfig.docker.json\" src/index.ts",
    "build": "tsc && tsc-alias",
    "build:docker": "tsc --project tsconfig.docker.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "seed:equipment": "ts-node -r tsconfig-paths/register src/infrastructure/cli/seedEquipment.ts",
    "seed:manufacturers": "ts-node -r tsconfig-paths/register src/infrastructure/cli/seedManufacturers.ts",
    "fix:project-index": "ts-node -r tsconfig-paths/register src/scripts/fix-project-name-index.ts"
  },
  "dependencies": {
    "@bess-pro/shared": "file:../../packages/shared",
    "@sendgrid/mail": "^8.1.5",
    "aws-sdk": "^2.1490.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.8.1",
    "stripe": "^14.7.0",
    "tsc-alias": "^1.8.8",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.8",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.0"
  }
}
