# BESS-Pro Production Environment

# Application
NODE_ENV=production
PORT=8010
FRONTEND_PORT=3003

# Database
MONGODB_URI=mongodb://mongodb:27017/bess-pro-prod
MONGODB_DB_NAME=bess-pro-prod

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT Configuration (ALTERAR EM PRODUÇÃO!)
JWT_SECRET_KEY=your-super-secure-256-bit-secret-key-here-change-this-in-production
JWT_REFRESH_SECRET_KEY=your-super-secure-256-bit-refresh-secret-key-different-from-access
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=bess-pro-api
JWT_AUDIENCE=bess-pro-app

# CORS
CORS_ORIGIN=https://yourdomain.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Email (configurar conforme seu provedor)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# Seeding
SEED_EQUIPMENT=false

# Logs
LOG_LEVEL=info